<p id="notice"><%= notice %></p>

<%# <h1>Master List</h1> %>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th><center>Task</center></th>
      <th><center>Project</center></th>
      <th><center>Priority</center></th>
      <th><center>Time to Complete (min)</center></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>

      <% if list.completed %>
        <tr class="table-info">
          <td>
          <%= form_with(model: list) do |form| %>
              <%= form.text_field :description, type: 'hidden' %>
              <%= form.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
              <%= form.submit "Undo Complete" %>
          <% end%>
          </td>
          <td><center><%= link_to list.description, edit_list_path(list) %></center></td>
          <td><center><%= list.category %></center></td>
          <td><center><%= list.priority %></center></td>
          <td><center><%= list.duration %></center></td>
          <td><% link_to 'Show', list %></td>
          <td><% link_to 'Edit', edit_list_path(list) %></td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark btn-sm"%></td>
        </tr>
      <% else%>
        <tr>
          <td>
          <%= form_with(model: list) do |form| %>
              <%= form.text_field :description, type: 'hidden' %>
              <%= form.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
              <%= form.submit "Mark Complete" %>
          <% end%>
          </td>
          <td><center><%= link_to list.description, edit_list_path(list) %></center></td>
          <td><center><%= list.category %></center></td>
          <td><center><%= list.priority %></center></td>
          <td><center><%= list.duration %></center></td>
          <td><% link_to 'Show', list %></td>
          <td><% link_to 'Edit', edit_list_path(list) %></td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark btn-sm" %></td>
        </tr>
    <% end %>
    <% end%>
  </tbody>
</table>

<br>
<div><center>
<%= link_to 'Add Task', new_list_path, class: "btn btn-secondary btn-sm" %> ||
<%= link_to 'Deleted Marked Items', home_trash_path, data: { confirm: 'Are you sure?' }, class: "btn btn-warning btn-sm"%>
</center</div>